{% block body %}
    <div class="row justify-content-center">
        {% for label, messages in app.flashes(['success', 'warning']) %}
            {% for message in messages %}
                {% if label == 'success' %}
                    <div class="alert alert-success bg-success text-light border-0 alert-dismissible fade show" role="alert">
                        {{ message }}

                    </div>
                {% else %}
                    <div class="alert alert-danger bg-danger text-light border-0 alert-dismissible fade show" role="alert">
                        {{ message }}
                    </div>
                {% endif %}
            {% endfor %}
        {% endfor %}
    </div>

    <section class="section register min-vh-100 d-flex flex-column align-items-center justify-content-center py-4 bg-primary-light">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-8 mt-4 mt-lg-0" data-aos="fade-up" data-aos-delay="200">
                    <div class="box featured">
                        <div class="d-flex justify-content-center py-4">
                            <a href="index.html" class="logo d-flex align-items-center w-auto">
                                <img src="assets/img/logo.png" alt="">
                                {# <span class="d-none d-lg-block">Pendaftaran Test</span> #}
                            </a>
                        </div><!-- End Logo -->
                        {{ include('user/_registerform.html.twig') }}
                    </div>
                </div>
            </div>
        </div>

    </section>

    {# <a href="{{ path('app_user_index') }}">back to list</a> #}
{% endblock %}
